        <Button fx:id="goBack" onMouseClicked="#goBack" prefHeight="39.0" text="..." AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />

        <ListView fx:id="folderList" AnchorPane.bottomAnchor="350.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="60.0" />
        <ListView fx:id="fileList" AnchorPane.bottomAnchor="-41.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="537.0" />

        <Button fx:id="copyButton" text="Copy" AnchorPane.bottomAnchor="-81.0" AnchorPane.leftAnchor="11.0" />
        <Button fx:id="deleteButton" text="Delete" AnchorPane.bottomAnchor="-81.0" AnchorPane.leftAnchor="80.0" />
        <Button fx:id="moveButton" text="Move" AnchorPane.bottomAnchor="-81.0" AnchorPane.leftAnchor="150.0" />
        <Button fx:id="renameButton" text="Rename" AnchorPane.bottomAnchor="-81.0" AnchorPane.leftAnchor="214.0" />
    </children>
</AnchorPane>
